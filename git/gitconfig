[user]
	name = 1Dice
	email = 23101388+1DIce@users.noreply.github.com

[core]
	longpaths = true
	filemode = false
	autocrlf = false
#	pager = less -E -X
  pager = delta
  excludesFile = ~/.gitignore
  fsmonitor = true

[rerere]
	enabled = true

[init]
  defaultBranch = main
[push]
	default = simple

[pull]
	rebase = true

[color]
	ui = auto

[alias]
  # Force git merge to always show the git message editor
  merge = merge --edit
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative -n 20
	st = status -sb
  top = !git log --format=format:%an | sort | uniq -c | sort -r | head -n 20
  stat = !git-stat
  depgraph = !git-depgraph
  root = rev-parse --show-toplevel
  ch = !git-ch

[merge]
  guitool = kdiff3
	tool = kdiff3
  conflictstyle = diff3

[diff]
  guitool = kdiff3
  tool = vscode

[difftool "vscode"]
  cmd = code --wait --diff $LOCAL $REMOTE

[mergetool "fugitive"]
  cmd = nvim -f -c \"Gdiffsplit!\" \"$MERGED\"

[mergetool "vim_mergetool"]
  cmd = nvim  -c "MergetoolStart" "$MERGED" "$BASE" "$LOCAL" "$REMOTE"
  trustExitCode = true

[mergetool "kdiff3"]
  cmd = "~/bin/kdiff-merge.sh  \"$LOCAL\" \"$REMOTE\" \"$BASE\" \"$MERGED\" "
	trustExitCode = false
	keepBackup = false

# Delta config
[interactive]
  diffFilter = delta --color-only --features=interactive
[delta]
  features = decorations navigate
  side-by-side = true
[delta "interactive"]
  keep-plus-minus-markers = false
[delta "decorations"]
  commit-decoration-style = blue ol
  commit-style = raw
  file-style = omit
  hunk-header-decoration-style = blue box
  hunk-header-file-style = red
  hunk-header-line-number-style = "#067a00"
  hunk-header-style = file line-number syntax


[include]
  path = ~/.gitconfig-credential

[includeIf "gitdir:~/work/"]
  path = ~/.gitconfig-work
[credential "https://dev.azure.com"]
	useHttpPath = true
