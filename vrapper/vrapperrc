" SETTINGS
set ignorecase
set smartcase
set hlsearch
set incsearch
set scrolloff=4
set autoindent
" enables to move selection in autocomplete menu with ctrl-n and ctrl-p
set contentassistmode  

" MAPPINGS
nnoremap Y y$
nunmap <c-j>
nunmap <c-k>

" remap content assist-mode navigation
camap <c-k> <c-p>
camap <c-j> <c-n>

" vim sneak
nmap s <Plug>(sneak_s)
nmap S <Plug>(sneak_S)

nmap ; <Plug>(sneak-next)
nmap , <Plug>(sneak-prev)

vmap s <Plug>(sneak_s)
vmap Z <Plug>(sneak_S)

vmap ; <Plug>(sneak-next)
vmap , <Plug>(sneak-prev)

nmap f <Plug>(sneak_f)
nmap F <Plug>(sneak_F)
nmap t <Plug>(sneak_t)
nmap T <Plug>(sneak_T)

vmap f <Plug>(sneak_f)
vmap F <Plug>(sneak_F)
vmap t <Plug>(sneak_t)
vmap T <Plug>(sneak_T)

omap z <Plug>(sneak_s)
omap Z <Plug>(sneak_S)
